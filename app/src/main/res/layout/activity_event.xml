<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/back_btn"
            android:layout_marginStart="10dp"
            android:text="@string/event_name"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/event_background_pic"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_rectangle_bg"
                android:backgroundTint="?attr/colorPrimary"
                android:scaleType="centerCrop"
                android:src="@drawable/event_icon" />

            <TextView
                android:id="@+id/date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/date"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:foregroundTint="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorOnSecondary"/>
            />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_calendar"
                android:drawableTint="?attr/colorOnPrimary"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="@string/date"
                android:foregroundTint="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorOnSecondary"/>

            <TextView
                android:id="@+id/address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/address"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:foregroundTint="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorOnSecondary"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location"
                android:drawableTint="?attr/colorOnPrimary"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="@string/address"
                android:foregroundTint="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorOnSecondary"/>

            <com.google.android.gms.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/advertiser_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:text="@string/advertiser"
                android:textAppearance="?attr/textAppearanceBody1" />

            <Button
                android:id="@+id/subscribe_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_rounded_corner"
                android:text="@string/sub_event"
                android:textColor="@color/white" />

            <ProgressBar
                android:id="@+id/event_progress_bar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:indeterminateTint="@color/primary" />

            <Button
                android:id="@+id/search_users_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rounded_corner"
                android:text="@string/search_user_event"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/no_results_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:text="@string/no_results_found" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_users_event_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
