<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterEventActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:padding="10dp"
        android:id="@+id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter Events"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/back_btn"/>

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:id="@+id/back_btn"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_margin="10dp"
        android:id="@+id/category_event_layout">

        <TextView
            android:id="@+id/category_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Category" />

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_search_text" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_event_layout"
        android:layout_margin="10dp"
        android:id="@+id/distance_event_layout">

        <TextView
            android:id="@+id/distance_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Distance" />

        <SeekBar
            android:id="@+id/distance_bar"
            android:layout_width="match_parent"
            android:layout_below="@id/distance_search_text"
            android:thumbTint="?attr/colorPrimary"
            android:progressTint="?attr/colorPrimary"
            android:layout_height="wrap_content"
            android:max = "1000"
            android:progress="100"/>

        <TextView
            android:id="@+id/distance_quantity_text"
            android:layout_below="@id/distance_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:text="100 Km" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/distance_event_layout"
        android:layout_margin="10dp"
        android:id="@+id/order_event_layout">

        <TextView
            android:id="@+id/order_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/order_spinner"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_search_text" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_event_layout"
        android:layout_margin="10dp"
        android:id="@+id/search_event_layout">

        <TextView
            android:id="@+id/event_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_rounded_corner"
            android:layout_margin="10dp"
            android:hint="Event name"
            android:backgroundTint="?attr/colorOnSecondary"
            android:foregroundTint="?attr/colorOnPrimary"
            android:outlineAmbientShadowColor="?attr/colorOnPrimary"
            android:padding="10dp"
            android:elevation="4dp"
            android:layout_below="@id/event_search_text"
            android:layout_toLeftOf="@id/search_event_btn"
            android:id="@+id/search_event_input"
            />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_search"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/primary"
            android:padding="4dp"
            android:layout_below="@id/event_search_text"
            android:layout_margin="10dp"
            android:id="@+id/search_event_btn"/>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_event_layout"
        android:padding="10dp"
        android:id="@+id/search_event_recycler_view"
        />


</RelativeLayout>
