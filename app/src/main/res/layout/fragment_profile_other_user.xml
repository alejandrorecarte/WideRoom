<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragmentOtherUser"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="20dp">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/circular_bg"
        android:backgroundTint="@color/primary"
        android:src="@drawable/person_icon"
        android:scaleType="centerCrop"
        android:layout_marginBottom="40dp"
        android:id="@+id/profile_image_view_other_user"/>

    <EditText
        android:id="@+id/profile_username_other_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="?attr/colorOnSecondary"
        android:elevation="5dp"
        android:enabled="false"
        android:foregroundTint="?attr/colorOnPrimary"
        android:hint="Username"
        android:inputType="text"
        android:outlineAmbientShadowColor="?attr/colorOnPrimary"
        android:padding="10dp" />

    <EditText
        android:id="@+id/profile_bio_other_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="?attr/colorOnSecondary"
        android:elevation="5dp"
        android:enabled="false"
        android:foregroundTint="?attr/colorOnPrimary"
        android:hint="Bio"
        android:inputType="text|textShortMessage"
        android:outlineAmbientShadowColor="?attr/colorOnPrimary"
        android:padding="10dp" />

</LinearLayout>
